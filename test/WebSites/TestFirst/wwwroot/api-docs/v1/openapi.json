{
  "openapi": "3.0.1",
  "info": {
    "title": "API V1",
    "version": "V1"
  },
  "paths": {
    "/api/products": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created",
            "headers": {
              "Location": {
                "description": "The URI of the created product",
                "required": true,
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/invalidRequest"
          }
        }
      },
      "get": {
        "parameters": [
          {
            "$ref": "#/components/parameters/pageNo"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieved products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/product"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/invalidRequest"
          }
        }
      }
    },
    "/api/products/{id}": {
      "get": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieved product",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product"
                }
              }
            }
          },
          "404": {
            "description": "Product not found"
          }
        }
      },
      "patch": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/patchDocument"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product patched"
          },
          "400": {
            "$ref": "#/components/responses/invalidRequest"
          },
          "404": {
            "description": "Product not found"
          }
        }
      },
      "put": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product updated"
          },
          "400": {
            "$ref": "#/components/responses/invalidRequest"
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "product": {
        "required": [
          "id",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "readOnly": true
          },
          "name": {
            "type": "string"
          }
        }
      },
      "errorMap": {
        "type": "object",
        "additionalProperties": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "patchDocument": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/patchOperation"
        }
      },
      "patchOperation": {
        "type": "object",
        "properties": {
          "op": {
            "enum": [
              "add",
              "remove",
              "replace",
              "move",
              "copy",
              "test"
            ],
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "value": { }
        }
      }
    },
    "responses": {
      "invalidRequest": {
        "description": "Invalid request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/errorMap"
            }
          }
        }
      }
    },
    "parameters": {
      "pageNo": {
        "name": "pageNo",
        "in": "query",
        "required": true,
        "schema": {
          "type": "number"
        }
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "required": true,
        "schema": {
          "type": "number"
        }
      }
    }
  }
}